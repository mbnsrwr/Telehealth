<% include ../partials/head %>

<main id ="main">
		<div class="bg_color_2">
			<div class="container margin_60_35">
				<div id="register">
					<h1>DOCTOR! Let patients to Find you!!</h1>
					<div class="row justify-content-center">
						<div class="col-md-7">
							<form id="checkform1" data-toggle="validator" role="form">
								<div class="box_form">
									<div class="form-group">
										<label>Email</label>
										<input type="email" id="email" class="form-control" placeholder="Your email address" required="required" data-error="Email is required">
										<div class="help-block with-errors"style="font-size:15px; color:red;"></div>
									</div>
									<div class="form-group">
										<label>Access Card ID </label>
										<input type="text" id="card-id" minlength = 6 class="form-control" placeholder="access id for your account"  required="required" data-error="6 digit Access ID is required">
										<div class="help-block with-errors"style="font-size:15px; color:red;"></div>
									</div>
									<div class="form-group">
										<label>Name</label>
										<input type="text" id="fName" minlength = 3 class="form-control" placeholder="Your name"  required="required" data-error="Firstname is required">
										<div class="help-block with-errors"style="font-size:15px; color:red;"></div>
									</div>
									<div class="form-group">
										<label>Last name</label>
										<input type="text" id="lName" minlength = 3 class="form-control" placeholder="Your last name"  required="required" data-error="FirstName is required">
										<div class="help-block with-errors"style="font-size:15px; color:red;"></div>
									</div>
									
									<div class="form-group">
										<label>Gender</label><br>
										<input type="radio" id="gender" name="gender" value="male" checked><label>  Male</label>
										<input type="radio" id="gender" name="gender" value="female"><label>  Female</label>
										<input type="radio" id="gender" name="gender" value="other"><label>  Other</label>
										<div class="help-block with-errors"style="font-size:15px; color:red;"></div>
									</div>
									<div class="form-group">
										<label>Date of Birth</label>
										<input id="dob" type="date" class="form-control"placeholder="Your DoB" width="276"  required="required" data-error="DOB is required" />
										<div class="help-block with-errors"style="font-size:15px; color:red;"></div>
									</div>
                                    <div class="form-group">
                                        <label>Specialization <a href="#0" data-toggle="tooltip" data-placement="top" title="You Field"><i class="fa fa-fw fa-question-circle"></i></a></label>
                                        <input type="text" id="specl" minlength = 4 class="form-control" placeholder="Ex: Piscologist, Pediatrician..."  required="required" data-error="Specialization is required">
										<div class="help-block with-errors"style="font-size:15px; color:red;"></div>
                                    </div>
                                    <div class="form-group">
										<label>In filed Since</label>
										<input id="exp" type="date" class="form-control" placeholder="Working Since" width="276"  required="required" data-error="Working since date is required"/>
										<div class="help-block with-errors"style="font-size:15px; color:red;"></div>
									</div>
									<div id="pass-info" class="clearfix"></div>
									<div class="checkbox-holder text-left">
										<div class="checkbox_2">
										  <div class="form-group">
											<input type="checkbox" id="check" value="accept_2" id="check_2" name="check_2" checked  required="required" data-error="Please Check to continue">
											<label for="check_2"><span>I Agree to the <strong>Terms &amp; Conditions</strong></span></label>
											<div class="help-block with-errors"style="font-size:15px; color:red;"></div>
										</div>
									</div>
									<div class="form-group text-center add_top_30">
										<input class="btn_1 register-doctor" type="submit" value="Submit">
									</div>
									</form>
								</div>
								<p class="text-center"><small>All the credentials provided above Must be correct to best of your knowledge. Remember your Card ID.</small></p>
						</div>
					</div>
					<!-- /row -->
				</div>
				
				<!-- /register -->
			</div>
		</div>
	</main>
<script>

</script>

