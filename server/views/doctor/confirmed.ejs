<% include partials/foot %>


<script>

var apiUrl = location.protocol + '//' + location.host;
 
console.log(apiUrl);
 <%  for(var i = 0; i < asset.length; i++) { %>  
//check user input and call server to create dataset
$(<%- '"#submit'+ i +'"' %>).click(function () {
    var check = $(<%- '"#check'+ i + '"'%> ).is(':checked');  
    var med = [];
    var dosage = [];
    var notes = [];
    var symptoms = $(<%- '"#symptoms'+ i + '"'%> ).val();
    var appointId = $( <%- '"#hidden'+ i+ '"' %> ).val();
    var description = $(<%- '"#description'+ i + '"'%> ).val();
    //get user input data
    $(<%- "'input[name=" + '"med' + i + '[]"]'+ "'" %> ).each(function() { 
      med.push($(this).val());
    });
    $(<%- "'input[name=" + '"dosage' + i + '[]"]'+ "'" %> ).each(function() { 
      dosage.push($(this).val());
    });
    $(<%- "'input[name=" + '"note' + i + '[]"]'+ "'" %> ).each(function() { 
      notes.push($(this).val());
    });
    if(symptoms==''){
        $("#error").html('<div id="toast"><div id="img"><i class="fa fa-fw fa-bell-o"></i></div><div id="desc"> Field is required </div></div>');
        var x = document.getElementById("toast")
        x.className = "show";
        setTimeout(function(){ x.className = x.className.replace("show", ""); }, 5000);
        $(<%- '"#symptoms'+ i + '"'%> ).css("border", "2px red solid");
        return;
    }
    var inputData = '[';
    for( var j = 0; j < med.length; j++){
        inputData += '{' ;
        inputData += '"med" : "' + med[j] + '", ';
        inputData += '"dosage" : "' + dosage[j] + '", ';
        inputData += '"note" : "' + notes[j] + '" ';
        inputData += '}';
        if( j+1 != med.length ){
            inputData += ',';
        } else {
            inputData += ']';
        }
    }
    var postData = {'check': check,'symptoms': symptoms, 'appointId':appointId , 'inputData': inputData, 'description': description };
    console.log(postData);
    postData = JSON.stringify(postData);
    console.log(postData);
    $.ajax({
        type: 'POST',
        url: apiUrl + '/doctor/addMedication',
        data: postData,
        dataType: 'json',
        contentType: 'application/json',
        beforeSend: function () {
            //display loading
            $(".spinner").show();
        },
        success: function (data) {
          if ( data.success ) {
             location.reload();
          }
            //check data for error
            if (data.error) {
               $(".spinner").hide();
                alert(data.error);
                return;
            } else {
                //notify successful registration
                $(".spinner").hide();
                document.getElementById('successful-registration').style.display = "block";
                document.getElementById('registration-info').style.display = "none";
            }
        },
        error: function (jqXHR, textStatus, errorThrown) {
           //reload on error
            alert("Error: Try again")
            console.log(errorThrown);
            console.log(textStatus);
            console.log(jqXHR);
        }
    });
});
<% } %>
</script>